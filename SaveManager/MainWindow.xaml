<Window x:Class="SaveManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Manager" Height="120" Width="650"
        Background="#252526"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505055"/>
                                <Setter Property="BorderBrush" Value="#6A6A6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0078D7"/>
                                <Setter Property="BorderBrush" Value="#0067B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Padding="12" Background="#1E1E1E" CornerRadius="3" Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="SelectHotkeyButton" 
                        Grid.Column="0" 
                        Content="Select Hotkey" 
                        Click="SelectHotkey_Click"
                        MinWidth="100"
                        HorizontalAlignment="Stretch"/>
                        
                <Border Grid.Column="1" 
                        BorderBrush="#555555" 
                        BorderThickness="1" 
                        CornerRadius="3"
                        Background="#333337"
                        Margin="8,0,0,0" 
                        Padding="12,0"
                        Height="32"
                        MinWidth="80">
                    <TextBlock x:Name="KeyTextBlock" 
                               Text="Key" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>
            </Grid>

            <Rectangle Grid.Column="1" 
                       Width="1" 
                       Fill="#3E3E42" 
                       Margin="10,5" 
                       VerticalAlignment="Stretch"/>

            <Button x:Name="SelectFileButton" 
                    Grid.Column="2" 
                    Content="Select File" 
                    Margin="10,0"
                    Click="SelectFile_Click"
                    MinWidth="100"
                    HorizontalAlignment="Stretch"/>
                    
            <TextBlock x:Name="SelectedFileText"
                       Grid.Column="3"
                       Text="No file selected"
                       Foreground="#BBBBBB"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextTrimming="CharacterEllipsis"/>

            <Rectangle Grid.Column="4" 
                       Width="1" 
                       Fill="#3E3E42" 
                       Margin="10,5" 
                       VerticalAlignment="Stretch"/>

            <Button x:Name="StartStopButton" 
                    Grid.Column="5" 
                    Content="Start" 
                    Click="StartStop_Click"
                    MinWidth="100"
                    HorizontalAlignment="Stretch"/>
        </Grid>
    </Border>
</Window>